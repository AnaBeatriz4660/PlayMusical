titulos = []
artistas = []
generos = []
duracao = []
duracao_seg= []
buscar_musica = []
buscar_artista = []
buscar_genero = []

def menu():
    print("Escolha uma opção")
    print("1. Adicionar música")
    print("2. Listar músicas")
    print("3. Atualizar música")
    print("4. Remover música")
    print("5. Reproduzir música")
    print("6. Buscar título")
    print("7. Buscar artista")
    print("8. Buscar gênero")
    print("0. Sair")

def mostrar_musica(i):
   print(f"{i+1}. {titulos[i]} - {artistas[i]} | Gênero: {generos[i]} - Duração: {duracao[i]}:{duracao_seg[i]}")


def adicionar():
    titulo = input("Título: ").strip()
    artista = input("Artista: ").strip()
    if not titulo or not artista:
        print("Título e artista são obrigatórios.")
        return
    genero = input("Gênero: ").strip() or "Não colocado"
    
    try:
        duracao_min = int(input("Digite a duração (em minutos): "))
        duracao_em_seg = int(input("Digite a duração (em segundos): "))
        if duracao_min <= 0:            
            print("Coloque uma duração positiva.")
            return
        elif duracao_em_seg <= 0:            
            print("Coloque uma duração positiva.")
            return
    except ValueError:
        print("inválido.")
        return

    titulos.append(titulo)
    artistas.append(artista)
    generos.append(genero)
    duracao.append(duracao_min)
    duracao_seg.append(duracao_em_seg)
    print("Música adicionada")

def listar():
    if not titulos:
        print("Nenhuma música.")
        return
    for i in range(len(titulos)):
        mostrar_musica(i)

def atualizar():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except ValueError:
        print("Inválido.")
        return
    titulos[i] = input("Novo título: ").strip() or titulos[i]
    artistas[i] = input("Novo artista: ").strip() or artistas[i]
    generos[i] = input("Novo gênero: ").strip() or generos[i]
    duracao[i] = input("Nova duração(Em minutos): ").strip() or duracao[i]
    duracao_seg[i] = input("Nova duração(Em segundos): ").strip() or duracao_seg[i]
    print("Música atualizada")

def remover():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except ValueError:
        print("Entrada inválida.")
        return
    titulos.pop(i)
    artistas.pop(i)
    generos.pop(i)
    duracao.pop(i)
    duracao_seg.pop(i)
    print("Música removida")

def reproduzir():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except ValueError:
        print("Entrada inválida.")
        return
    print("Reproduzindo...")
    mostrar_musica(i)


def buscar_titulo():
    titulo_busca = input("Digite o titulo: ").strip().lower()
    resultados = [i for i, t in enumerate(titulos) if titulo_busca in t.lower()]
    if resultados:
        print(f"Resultado encontrado:")
        for i in resultados:
            mostrar_musica(i)

    else:
        print("música não encontrada.")


def buscar_artista():
    artista_busca = input("Digite o nome do artista: ").strip().lower()
    resultados = [i for i, a in enumerate(artistas) if artista_busca == a.lower()]
    if resultados:
        print(f"Resultado encontrado:")
        for i in resultados:
            mostrar_musica(i)
    else:
        print("Musica não encontrada.")



def buscar_genero():
    genero_busca = input("Digite o gênero: ").strip().lower()
    resultados = [i for i, g in enumerate(generos) if genero_busca == g.lower()]
    if resultados:
        print(f"Resultado encontrado:")
        for i in resultados:
            mostrar_musica(i)
    else:
        print("música não encontrada.")



def main():
    while True:
        menu()
        op = input("Escolha: ")
        if op == "1": adicionar()
        elif op == "2": listar()
        elif op == "3": atualizar()
        elif op == "4": remover()
        elif op == "5": reproduzir()
        elif op == "6": buscar_titulo()
        elif op == "7": buscar_artista()
        elif op == "8": buscar_genero()
        elif op == "0":
            print("Saindo...")
            break
        else:
            print("Opção inválida.")

main()

