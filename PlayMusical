titulos = []
artistas = []
generos = []
duracoes = []


def menu():
    print("Escolha uma opção")
    print("1. Adicionar música")
    print("2. Listar músicas")
    print("3. Atualizar música")
    print("4. Remover música")
    print("5. Reproduzir música")
    print("0. Sair")





def mostrar_musica(i):
    print(f"{i+1}. {titulos[i]} - {artistas[i]} | Gênero: {generos[i]} - {duracoes[i]}")

def adicionar():
    titulo = input("Título: ").strip()
    artista = input("Artista: ").strip()
    if not titulo or not artista:
        print("Título e artista são obrigatórios.")
        return
    genero = input("Gênero: ").strip() or "Não colocado"
      duracoes=int(input({"Digite o primeiro número: "}))
    if duracoes <= 0:
        print("Coloque uma duração positiva.")
        return
    titulos.append(titulo)
    artistas.append(artista)
    generos.append(genero)
    duracoes.append(duracoes)
    print("Música adicionada!")

def listar():
    if not titulos:
        print("Nenhuma música.")
        return
    for i in range(len(titulos)):
        mostrar_musica(i)


def Escolhas_meus_amigos():
    Escolhas=[
        ("Cachecol", "Kamaitachi", "Pop"),
        ("A banda", "Chico Buarque", "MPB"),
        ("Gnarly", "KATSEYE", "Pop"),
        ("Maria Madalena", "Luna Di", "Rock Psicodélico"),
        ("A Little Bit Hard Now", "She Wants Revenge", "Alternativo"),
        ("Salvatore", "Lana Del Rey", "Pop"),
        ("Lolita", "Lana Del Rey", "Pop"),
        ("Cannibal", "Kesha", "Pop"),
        ("Gomenne Gomenne", "Kikuo", "Vocaloid"),
        ("A história de Jonny", "Kamaitachi", "Pop")
    ]
    for titulo, artista, genero in Escolhas:
        titulos.append(titulo)
        artistas.append(artista)
        generos.append(genero)



Escolhas_meus_amigos()

def atualizar():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except:
        print("inválido.")
        return
    titulos[i] = input("Novo título: ").strip() or titulos[i]
    artistas[i] = input("Novo artista: ").strip() or artistas[i]
    generos[i] = input("Novo gênero: ").strip() or generos[i]
    print("Música atualizada!")

def remover():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except:
        print("Entrada inválida.")
        return
    titulos.pop(i)
    artistas.pop(i)
    generos.pop(i)
    print("Música removida!")

def reproduzir():
    listar()
    if not titulos: return
    try:
        i = int(input("Número da música: ")) - 1
        if i < 0 or i >= len(titulos):
            print("Número inválido.")
            return
    except:
        print("Entrada inválida.")
        return
    print("Reproduzir")
    mostrar_musica(i)





def main():
    while True:
        menu()
        op = input("Escolha: ")
        if op == "1": adicionar()
        elif op == "2": listar()
        elif op == "3": atualizar()
        elif op == "4": remover()
        elif op == "5": reproduzir()
        elif op == "0":
            print("Voltar")
            break
        else:
            print("Opção inválida.")

main()
